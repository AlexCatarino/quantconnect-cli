{
  "name": "quantconnect-cli",
  "version": "0.0.0",
  "description": "CLI aimed at making local development of QuantConnect algorithms easier",
  "repository": "jmerle/quantconnect-cli",
  "homepage": "https://github.com/jmerle/quantconnect-cli",
  "bugs": "https://github.com/jmerle/quantconnect-cli/issues",
  "author": "Jasper van Merle",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "qcli": "./bin/run"
  },
  "keywords": [
    "oclif",
    "quantconnect"
  ],
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc -b",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --format codeframe 'src/**'",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{yml,json}'",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write --ignore-path .gitignore '**/*.{yml,json}'",
    "release": "np",
    "readme": "oclif-dev readme && git add README.md",
    "version": "yarn readme",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif-dev manifest && yarn readme"
  },
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "axios": "^0.19.2",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "cli-highlight": "^2.1.4",
    "date-fns": "^2.11.0",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "inquirer-autocomplete-prompt": "^1.0.2",
    "klaw-sync": "^6.0.0",
    "open": "^7.0.3",
    "promise-queue": "^2.2.5",
    "table": "^5.4.6",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/klaw-sync": "^6.0.0",
    "@types/node": "^13.9.3",
    "@types/promise-queue": "^2.2.0",
    "@types/table": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "globby": "^11.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "np": "^6.2.0",
    "prettier": "^2.0.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "qcli",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "repositoryPrefix": "<%- commandPath %>",
    "topics": {
      "api": {
        "description": "make authenticated requests to the QuantConnect API"
      },
      "backtests": {
        "description": "manage backtests"
      },
      "files": {
        "description": "manage synchronizing local files with QuantConnect"
      },
      "projects": {
        "description": "manage projects"
      }
    },
    "warn-if-update-available": {
      "timeoutInDays": 7
    }
  },
  "np": {
    "tests": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "lib/"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/no-inferrable-types": "off",
      "import/order": "error",
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn readme && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --format codeframe --fix"
    ],
    "*.{yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "arrowParens": "avoid"
  }
}
